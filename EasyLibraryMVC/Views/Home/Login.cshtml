@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login">
    <fieldset>
        <legend>Efetue seu login.</legend>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label" title="Login"></label>
            <input asp-for="Email" class="form-control"style="width:250px;font-size: 13px"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label" title="Senha"></label>
            <input asp-for="Senha" class="form-control" style="width:150px;font-size:13px" type="password"/>
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <input type="submit" value="Login" class="btn btn-primary" style="background-color: black"/>
    </fieldset>
</form>
